{
  "hooks": {
    "PostSessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/standards-load --auto",
            "description": "Auto-load development standards when session starts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "prompt_injection",
            "prompt": "According to language expression standards, communicate in English with direct and sharp expression, accurate technical judgments. Use // + space + English comment format in code comments.",
            "conditions": {
              "file_patterns": ["**/*.{js,ts,py,java,cpp,c,h,cs,go,rs}"],
              "exclude_patterns": ["**/node_modules/**", "**/dist/**", "**/build/**"]
            },
            "description": "Apply language standards when editing code"
          }
        ]
      },
      {
        "matcher": "Read|Grep|Glob",
        "hooks": [
          {
            "type": "prompt_injection",
            "prompt": "Apply technical analysis framework for systematic analysis: scrutinize data structures, track data flows, review efficiency, evaluate architectural trade-offs.",
            "conditions": {
              "file_patterns": ["**/*.{json,yaml,yml,md,txt}"],
              "keywords": ["config", "architecture", "design", "spec"]
            },
            "description": "Apply analysis framework when analyzing technical documentation"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "validation",
            "validation_type": "quality_gate",
            "rules": [
              "check_architecture_decay",
              "check_technical_debt",
              "check_maintainability"
            ],
            "conditions": {
              "file_patterns": ["**/*.{js,ts,py,java,cpp,c,cs}"],
              "min_file_size": 1000
            },
            "description": "Perform quality checks after code modifications"
          }
        ]
      }
    ],
    "UserPrompt": [
      {
        "matcher": "why|what if|how about|consider|what do you think|architecture|best practices|brainstorm|challenge",
        "hooks": [
          {
            "type": "socratic_dialogue",
            "intensity": "auto_detect",
            "max_duration": 300,
            "description": "Deep discussion keywords detected, activate Socratic dialogue"
          }
        ]
      }
    ]
  },
  "validation_rules": {
    "check_architecture_decay": {
      "description": "Check for architecture decay signs",
      "indicators": [
        "excessive_complexity",
        "tight_coupling",
        "code_duplication",
        "violates_single_responsibility"
      ],
      "threshold": 3,
      "action": "warn"
    },
    "check_technical_debt": {
      "description": "Check for technical debt accumulation",
      "indicators": [
        "todo_comments",
        "deprecated_apis",
        "security_vulnerabilities",
        "performance_anti_patterns"
      ],
      "threshold": 2,
      "action": "suggest_refactor"
    },
    "check_maintainability": {
      "description": "Check code maintainability",
      "indicators": [
        "long_methods",
        "deep_nesting",
        "magic_numbers",
        "poor_naming"
      ],
      "threshold": 4,
      "action": "suggest_improvement"
    }
  },
  "socratic_settings": {
    "intensity_levels": {
      "gentle_inquiry": {
        "triggers": ["how to"],
        "style": "exploratory",
        "max_questions": 3
      },
      "deep_questioning": {
        "triggers": ["why", "architecture", "design"],
        "style": "challenging",
        "max_questions": 5
      },
      "intense_refutation": {
        "triggers": ["critical", "fatal", "wrong", "flaw", "defect"],
        "style": "direct_opposition",
        "max_questions": 7
      }
    },
    "auto_termination": {
      "consensus_reached": true,
      "max_questions_exceeded": true,
      "shift_to_implementation": true,
      "diminishing_returns": true
    }
  },
  "language_enforcement": {
    "primary_language": "en-US",
    "technical_terms": {
      "action": "keep_english_with_explanation",
      "examples": {
        "API": "API (Application Programming Interface)",
        "REST": "REST (Representational State Transfer)",
        "SQL": "SQL (Structured Query Language)"
      }
    },
    "comment_format": {
      "style": "english_with_space",
      "pattern": "// + space + english_content"
    },
    "expression_style": {
      "directness": "high",
      "sharpness": "high",
      "zero_fluff": true,
      "technical_judgment": "accurate_over_friendly"
    }
  },
  "quality_settings": {
    "strict_mode": true,
    "auto_fix": false,
    "suggestions_only": true,
    "confidence_threshold": 0.7
  }
}